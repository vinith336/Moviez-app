<!DOCTYPE html>
<html lang="en">
    <head>
        {{>head}}
        <link rel="stylesheet" href="/css/movies.css">
    </head>
    <body>
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <h1>{{name}}'s list</h1>
                </div>
            </div>
            {{#if movies}}
                {{#each movies}}
                    {{>item}}
                {{/each}}
            {{else}}
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <h1>No Movies in {{name}}'s list</h1>
                </div>
            </div>
            {{/if}}
        </div>
        {{>foot}}
        <script src="/js/app.js"></script>
    </body>
</html>