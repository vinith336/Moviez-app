<div class="col-12 col-md-4">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h1 class="title-main">My List</h1>
        </div>
        <div class="col-12 text=center" id="linkDiv"></div>
    </div>
    {{#if list}}
        {{#each list}}
            {{>item}}
            <form action="/movies/me/delete" method="post">
                <input type="hidden" name="id" id="id" value="{{id}}">
                <div class="form-group row mt-2">
                    <div class="col-6">
                        <button class="btn btn-danger" type="submit">Remove from list</button>
                    </div>
                </div>
            </form>
        {{/each}}
    {{else}}
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <p>No Movies in your list</p>
        </div>
    </div>
    {{/if}}
</div>