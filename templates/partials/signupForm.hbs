<div class="container" class="signup-form-container">
    <div class="row align-items-center justify-content-center signup-form-row">
        <form action="/users" method="post" id="signupForm">
            <div class="form-group row justify-content-center">
                <div class="col-12 text-center">
                    <h1 class="title-main">Welcome to MovieZ!</h1>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-12 text-center">
                    <h3>Signup to continue</h3>
                </div>
            </div>
            <div class="form-group row mt-2 justify-content-center">
                <div class="col-5">
                    <label class="col-form-label" for="name">Name:</label>
                    <input required="true" type="text" class="form-control" id="name" name="name" placeholder="Name">
                </div>
                <div class="col-5">
                    <label class="col-form-label" for="email">Email:</label>
                    <input required="true" type="email" class="form-control" id="email" name="email" placeholder="Email">
                </div>
                <div class="col-5">
                    <label class="col-form-label" for="age">Age:</label>
                    <input required="true" type="number" class="form-control" id="age" name="age" placeholder="Age">
                </div>
                <div class="col-5">
                    <label class="col-form-label" for="password">Password:</label>
                    <input required="true" type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-5">
                    <p>Already a member? Then <a href="/">Login</a>.</p>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Signup</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
    </form>
    </div>
</div>