<div class="container" class="login-form-container">
    <div class="row align-items-center justify-content-center login-form-row">
        <div class="col-12">
            <form action="/users/login" method="post">
                <div class="form-group row justify-content-center">
                    <div class="col-12 text-center">
                        <h1 class="title-main">Welcome to MovieZ!</h1>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-12 text-center">
                        <h3>Login to continue</h3>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-12 col-md-5">
                        <label class="sr-only" for="email">Email:</label>
                        <input required="true" type="email" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-12 col-md-5 mt-2">
                        <label class="sr-only" for="password">Password:</label>
                        <input required="true" type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-12 col-md-5">
                        <p>Not a member? <a href="/signup">Signup</a> now</p>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

